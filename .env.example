# Server Configuration
PORT=7000

# API Configuration  
API_PREFIX=api/v1/
FRONTEND_ORIGIN=http://localhost:3000
BACKEND_ORIGIN=http://localhost:5000/api/v1

# JWT Configuration
JWT_ACCESS_SECRET=your-access-secret-key-change-me
JWT_REFRESH_SECRET=your-refresh-secret-key-change-me
JWT_ACCESS_TOKEN_EXPIRES_IN=30m
JWT_REFRESH_TOKEN_EXPIRES_IN=1h
COOKIE_MAX_AGE=604800000

# MySQL Database (Docker service - see docker-compose.yml)
MYSQL_NAME=itwebs
MYSQL_DIALECT=mysql
MYSQL_HOST=localhost
MYSQL_PORT=3307
MYSQL_USERNAME=myuser
MYSQL_PASSWORD=mypass

# Redis Cache (Docker service - see docker-compose.yml)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300

# ClickHouse (optional)
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your-clickhouse-password

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_SECRET=your-google-client-secret
GOOGLE_CALLBACK_LOGIN_URL=http://localhost:7000/api/v1/auth/google/callback

# Mailtrap (for email testing)
MAILTRAP_TOKEN=your-mailtrap-token

# File Storage
FILES_ACCESS_SECRET=your-files-access-secret-change-me
FILE_STORAGE_TYPE=filesystem

# RabbitMQ (Docker service - see docker-compose.yml)
RABBIT_URI=amqp://admin:admin123@localhost:5672
RABBIT_URI_DEV=amqp://admin:admin123@localhost:5672
